<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_icones"
    tools:context=".activity.CodigoVerificacaoActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/codigoVerificacaoVoltarBtn"
            style="@style/voltar"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:gravity="center"
            android:text="Verificação de Código"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/erroCodigoTextView"
            style="@style/NormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Código inválido. Tente novamente."
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/otpContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/otp_edit_text1"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:background="@drawable/input"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/otp_edit_text2"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:background="@drawable/input"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/otp_edit_text3"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:background="@drawable/input"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/otp_edit_text4"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:background="@drawable/input"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/otp_edit_text5"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:background="@drawable/input"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                tools:ignore="LabelFor" />

            <EditText
                android:id="@+id/otp_edit_text6"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_margin="2dp"
                android:background="@drawable/input"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="1"
                tools:ignore="LabelFor" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>