<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background" />
        </shape>
    </item>

    <item
        android:top="40dp"
        android:left="40dp"
        android:drawable="@drawable/livro_icon_1"
        android:width="80dp"
        android:height="80dp"
        android:gravity="top|left"
        android:tint="@color/botao_fundo" />
    <item
    android:top="120dp"
    android:right="60dp"
    android:drawable="@drawable/livro_icon_2"
    android:width="64dp"
    android:height="64dp"
    android:gravity="top|right"
        android:tint="@color/botao_fundo" />
    <item
    android:top="250dp"
    android:left="20dp"
    android:drawable="@drawable/livro_icon_2"
    android:width="100dp"
    android:height="100dp"
    android:gravity="top|left"
        android:tint="@color/botao_fundo" />
    <item
    android:bottom="150dp"
        android:right="20dp"
    android:drawable="@drawable/livro_icon_1"
    android:width="72dp"
    android:height="72dp"
    android:gravity="bottom|center_horizontal"
        android:tint="@color/botao_fundo" />

    <item
        android:bottom="50dp"
        android:right="30dp"
        android:drawable="@drawable/livro_icon_1"
        android:width="64dp"
        android:height="64dp"
        android:gravity="bottom|right"
        android:tint="@color/botao_fundo" />

    <item
        android:bottom="100dp"
        android:left="50dp"
        android:drawable="@drawable/livro_icon_1"
        android:width="80dp"
        android:height="80dp"
        android:gravity="bottom|left"
        android:tint="@color/botao_fundo" />

</layer-list>